{% extends 'template.html.twig' %}

{% block title %}Media{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/Front/media.css') }}">
{% endblock %}

{% block body %}
    {{ include(':Front/partials:_nav.html.twig') }}
    <section class="video">
        <h1 class="sectionTitle">Sound<primary>.</primary></h1>
        <div class="soundWrapper">
            {% for sound in sounds %}
                <div class="col-md-6">
                    <h2>{{ sound.name }}</h2>

                </div>
            {% endfor %}
        </div>
    </section>
    <section class="clip">
        <h1 class="sectionTitle">Clip<primary>.</primary></h1>
        <div class="clipWrapper container row">
            {% for clip in clips %}
                <div class="col-md-6">
                    <iframe width="100%" height="300px" src="{{ clip.url }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>

                    </iframe>
                </div>
            {% endfor %}
        </div>
    </section>

    {{ include(':Front/partials:_footer.html.twig') }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/Front/media.js') }}"></script>
{% endblock %}